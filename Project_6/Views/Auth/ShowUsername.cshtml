@{
    ViewData["Title"] = "Your username";
}

<style>
    .username-box {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px 20px;
        max-width: 450px;
        margin: 50px auto;
        box-shadow: 0 4px 8px rgba(95, 95, 232, 0.2);
        text-align: center;
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #5f5fe8;
        margin-bottom: 15px;
    }

    p {
        font-size: 16px;
        color: #333;
        margin-bottom: 25px;
    }

    p strong {
        color: #5f5fe8;
        font-weight: 700;
    }

    a {
        display: inline-block;
        text-decoration: none;
        background-color: #5f5fe8;
        color: white;
        padding: 10px 18px;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    a:hover {
        background-color: #4c4ccc;
    }
</style>

<div class="username-box">
    <h2>Twoja nazwa użytkownika</h2>
    <p>Twój login to: <strong>@ViewBag.Username</strong></p>
    <a href="@Url.Action("Recover", "Auth")">Powrót</a>
</div>
