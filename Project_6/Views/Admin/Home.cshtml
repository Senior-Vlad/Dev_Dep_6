@{
    ViewData["Title"] = "Home";
}


<div class="dashboard-container">
    <div class="dashboard-item" onclick="window.location.href='@Url.Action("CreateToken", "Admin")'">
        <h3>Create Token permission</h3>
    </div>

    <div class="dashboard-item" onclick="window.location.href='@Url.Action("Page2", "Home")'">
        <h3>View all students</h3>
    </div>

    <div class="dashboard-item" onclick="window.location.href='@Url.Action("Page3", "Home")'">
        <h3>View all secretariates</h3>
    </div>

</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-top: 20px;
    }

    .dashboard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 100px;
    }

    .dashboard-item {
        width: 50%;
        margin: 10px;
        background-color: #5008A7FF;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .dashboard-item:hover {
        background-color: #8340D4FF;
    }

    .dashboard-item h3 {
        margin: 0;
    }

    .dashboard-item p {
        margin-top: 10px;
    }

    @*
    @media
    (max-width: 768px) {
        .dashboard-item {
            width: 90%;
        }
    } *@
</style>
