@model List<Project_6.Models.Zgloszenie>
@{
    ViewData["Title"] = "Zgłoszenia od studentów";
}
<style>
    html,
    body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    .table-container {
        padding-top: 100px;
        display: flex;
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        background-color: #f4f4f8;
    }

    .table-area {
        width: 100%;
        padding: 70px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-y: auto;
    }

    h2 {
        color: #5f5fe8;
        margin: 0 0 20px 0;
        text-align: center;
        font-size: 24px;
        font-weight: 700;
    }

    .table-box {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin-bottom: 20px;
        overflow: hidden;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 14px;
        font-weight: 500;
        /* Makes table text thicker */
    }

    .table th,
    .table td {
        padding: 10px;
        text-align: left;
        border: 1px solid #a6a6d6;
    }

    .table th:first-child {
        border-top-left-radius: 8px;
    }

    .table th:last-child {
        border-top-right-radius: 8px;
    }

    .table tbody tr:last-child td:first-child {
        border-bottom-left-radius: 8px;
    }

    .table tbody tr:last-child td:last-child {
        border-bottom-right-radius: 8px;
    }

    .table th {
        background-color: #7d7deb;
        color: white;
        font-weight: 700;
    }

    .table tbody tr {
        background-color: #fdfdff;
    }

    .table tbody tr:hover {
        background-color: #e8e8fc;
    }

    .btn {
        padding: 8px 12px;
        border: none;
        background-color: #5f5fe8;
        /* ciemna lawenda */
        color: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn:hover {
        background-color: #4c4ccc;
        /* ciemniejszy odcień przy najechaniu */
    }
</style>

<h2>@ViewData["Title"]</h2>
<div class="table-container">
    <div class="table-area">
        <div class="table-box">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Treść</th>
                        <th>Użytkownik</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var z in Model)
                    {
                        <tr>
                            <td>@z.Tytul</td>
                            <td>@z.Tresc</td>
                            <td>@(z.User?.Username ?? "Brak danych") <br />@(z.User?.Email ?? "-")</td>
                            <td>@(z.AktualnyStatus ?? "-")</td>
                            <td>
                                <form asp-action="ZmienStatus" method="post">
                                    <input type="hidden" name="zgloszenieId" value="@z.Id" />
                                    <button class="btn" type="submit">Oznacz jako rozwiązane</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
