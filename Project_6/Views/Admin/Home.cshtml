<style>
    html,
    body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    * {
        box-sizing: border-box;
    }

    .table-container {
        padding-top: 100px;
        display: flex;
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        background-color: #f4f4f8;
        /* szaro≈õƒá t≈Ça */
    }

    .table-area {
        width: 100%;
        padding: 70px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-y: auto;
    }

    h1 {
        color: #5f5fe8;
        /* ciemniejsza lawenda */
        margin: 0 0 20px 0;
        text-align: center;
        font-size: 24px;
    }

    .table-box {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        /* zwiƒôkszone zaokrƒÖglenie dla lepszego efektu */
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin-bottom: 20px;
        overflow: hidden;
        /* zapewnia, ≈ºe zawarto≈õƒá nie wychodzi poza zaokrƒÖglone rogi */
    }

    .table {
        width: 100%;
        border-collapse: separate;
        /* zmieniono na separate, aby zaokrƒÖglenie dzia≈Ça≈Ço */
        border-spacing: 0;
        /* usuwa odstƒôpy miƒôdzy kom√≥rkami */
        font-size: 14px;
    }

    .table th,
    .table td {
        padding: 10px;
        text-align: left;
        border: 1px solid #a6a6d6;
        /* jasna lawenda dla ramek */
    }

    /* ZaokrƒÖglenie rog√≥w dla pierwszej i ostatniej kom√≥rki w nag≈Ç√≥wku i wierszach */
    .table th:first-child {
        border-top-left-radius: 8px;
    }

    .table th:last-child {
        border-top-right-radius: 8px;
    }

    .table tbody tr:last-child td:first-child {
        border-bottom-left-radius: 8px;
    }

    .table tbody tr:last-child td:last-child {
        border-bottom-right-radius: 8px;
    }

    .table th {
        background-color: #7d7deb;
        /* jasna lawenda */
        color: white;
        font-weight: bold;
    }

    .table tbody tr {
        background-color: #fdfdff;
        /* jasne t≈Ço wierszy */
    }

    .table tbody tr:hover {
        background-color: #e8e8fc;
        /* jasna lawenda przy najechaniu */
    }

    .btn {
        padding: 8px 12px;
        border: none;
        background-color: #5f5fe8;
        /* ciemna lawenda */
        color: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn:hover {
        background-color: #4c4ccc;
        /* ciemniejszy odcie≈Ñ przy najechaniu */
    }

    .btn-icon-delete {
        background-color: transparent;
        border: 1px solid #a6a6d6;
        /* jasna lawenda dla obramowania */
        color: #5f5fe8;
        /* ciemna lawenda dla ikony */
        padding: 6px;
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
    }

    .btn-icon-delete:hover {
        background-color: #e8e8fc;
        /* jasna lawenda przy najechaniu */
        color: #4c4ccc;
        /* ciemniejszy odcie≈Ñ ikony */
    }

    .fas {
        font-size: 14px;
    }
</style>

<div class="table-container">
    <div class="table-area">
        <div class="table-box">
            <h1>Lista student√≥w</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID studenta</th>
                        <th>Imiƒô i nazwisko</th>
                        <th>Nazwa u≈ºytkownika</th>
                        <th>Email</th>
                        <th>Rola</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                    }
                    @foreach (var student in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@student.FirstName @student.LastName</td>
                            <td>@student.Username</td>
                            <td>@student.Email</td>
                            <td>@student.Role</td>
                            <td>
                                <form asp-action="DeleteStudent" asp-route-id="@student.Id" method="post"
                                    style="display:inline;"
                                    onsubmit="return confirm('Czy na pewno chcesz usunƒÖƒá studenta?');">
                                    <button type="submit" class="btn btn-sm btn-icon-delete" title="Usu≈Ñ">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
