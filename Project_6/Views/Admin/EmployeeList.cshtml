@model List<Project_6.ViewModels.StudentViewModel>
@{
    ViewData["Title"] = "Student Table";
}

<style>
    html,
    body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    * {
        box-sizing: border-box;
    }

    .table-container {
        padding-top: 100px;
        display: flex;
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        background-color: #f4f4f8;
        /* szarość tła */
    }

    .table-area {
        width: 100%;
        padding: 70px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-y: auto;
    }

    h1 {
        color: #5f5fe8;
        margin: 0 0 20px 0;
        text-align: center;
        font-size: 24px;
    }

    .table-box {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin-bottom: 20px;
        overflow: hidden;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 14px;
    }

    .table th,
    .table td {
        padding: 10px;
        text-align: left;
        border: 1px solid #a6a6d6;
    }

    .table th:first-child {
        border-top-left-radius: 8px;
    }

    .table th:last-child {
        border-top-right-radius: 8px;
    }

    .table tbody tr:last-child td:first-child {
        border-bottom-left-radius: 8px;
    }

    .table tbody tr:last-child td:last-child {
        border-bottom-right-radius: 8px;
    }

    .table th {
        background-color: #7d7deb;
        color: white;
        font-weight: bold;
    }

    .table tbody tr {
        background-color: #fdfdff;
    }

    .table tbody tr:hover {
        background-color: #e8e8fc;
    }

    .btn {
        padding: 8px 12px;
        border: none;
        background-color: #5f5fe8;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn:hover {
        background-color: #4c4ccc;
    }

    .btn-icon-delete {
        background-color: transparent;
        border: 1px solid #a6a6d6;
        color: #5f5fe8;
        padding: 6px;
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
    }

    .btn-icon-delete:hover {
        background-color: #e8e8fc;
        color: #4c4ccc;
    }

    .fas {
        font-size: 14px;
    }
</style>

<div class="table-container">
    <div class="table-area">
        <div class="table-box">
            <h1>Lista pracowników dziekanatu</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID pracownika</th>
                        <th>Imię i nazwisko</th>
                        <th>Nazwa użytkownika</th>
                        <th>Email</th>
                        <th>Rola</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                    }
                    @foreach (var emplyee in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@emplyee.FirstName @emplyee.LastName</td>
                            <td>@emplyee.Username</td>
                            <td>@emplyee.Email</td>
                            <td>@emplyee.Role</td>
                            <td>
                                <form asp-action="DeleteStudent" asp-route-id="@emplyee.Id" method="post"
                                    style="display:inline;"
                                    onsubmit="return confirm('Czy na pewno chcesz usunąć studenta?');">
                                    <button type="submit" class="btn btn-sm btn-icon-delete" title="Usuń">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
