@{
    ViewData["Title"] = "Student Table";
    var students = ViewBag.Students as List<dynamic>;
}

<h1 class="text-center my-4" style="padding-top: 50px;">Student Table</h1>

<div class="container">
    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 0;
            }
            @foreach (var student in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Username</td>
                    <td>@student.Email</td>
                    <td>@student.Role</td>
                    <td>
                        <form asp-action="DeleteStudent" asp-route-id="@student.Id" method="post" style="display:inline;"
                            onsubmit="return confirm('Are you sure you want to delete this student?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
                i++;
            }

        </tbody>
    </table>
</div>
