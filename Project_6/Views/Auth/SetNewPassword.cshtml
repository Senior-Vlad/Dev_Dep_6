@model Project_6.Models.RecoverViewModel
@{
    ViewData["Title"] = "Ustaw nowe hasło";
}

<style>
    .recover-box {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 20px;
        width: 100%;
        max-width: 500px;
        margin: 40px auto;
        box-shadow: 0 4px 8px rgba(95, 95, 232, 0.2);
    }

    h4 {
        color: #5f5fe8;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    label {
        color: #5f5fe8;
        font-size: 14px;
        margin-bottom: 5px;
    }

    input[type="password"] {
        padding: 8px;
        font-size: 14px;
        border: 1px solid #a6a6d6;
        border-radius: 4px;
        background-color: #fdfdff;
        transition: border-color 0.3s ease;
    }

    input[type="password"]:focus {
        outline: none;
        border-color: #4c4ccc;
        box-shadow: 0 0 5px #4c4ccc;
    }

    button.btn-primary {
        padding: 10px 15px;
        border: none;
        background-color: #5f5fe8;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
        width: 100%;
    }

    button.btn-primary:hover {
        background-color: #4c4ccc;
    }

    a {
        display: inline-block;
        text-decoration: none;
        background-color: #5f5fe8;
        color: white;
        padding: 10px 18px;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.3s ease;
        margin-top: 20px;
    }

    a:hover {
        background-color: #4c4ccc;
    }
</style>

<div class="recover-box">
    <h4>Ustaw nowe hasło</h4>
    <form asp-action="SetNewPassword" method="post">
        <input type="hidden" name="email" value="@Model.Email" />
        <input type="hidden" name="token" value="@Model.Token" />

        <div class="form-group">
            <label for="newPassword">Nowe hasło:</label>
            <input type="password" class="form-control" name="newPassword" required />
        </div>

        <button type="submit" class="btn btn-primary">Zmień hasło</button>
    </form>
    <a href="@Url.Action("Recover", "Auth")">Powrót</a>
</div>
