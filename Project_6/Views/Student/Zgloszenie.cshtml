@model Project_6.Models.Zgloszenie
@{
    ViewData["Title"] = "Zgłoś problem";
}


<h2>Zgłoszenie</h2>

<form asp-action="Zgloszenie" method="post">
    <div class="form-group">
        <label asp-for="Tytul"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Tresc"></label>
        <textarea asp-for="Tresc" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Tresc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Wyślij zgłoszenie</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
