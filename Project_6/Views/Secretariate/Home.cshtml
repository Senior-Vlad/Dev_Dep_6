@{
    ViewData["Title"] = "Panel dziekanat";
}

<style>
    .admin-panel-container {
        padding-top: 60px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f4f4f8;
    }

    .admin-panel-container .btn-admin {
        text-decoration: none !important;
        width: 50%;
        max-width: 500px;
        margin: 10px 0;
        padding: 16px;
        font-size: 20px;
        background-color: #6259e8;
        border: none;
        border-radius: 8px;
        color: white;
        transition: background-color 0.2s, transform 0.1s;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .admin-panel-container .btn-admin:hover {
        background-color: #5149d1;
        transform: scale(1.01);
    }
</style>

<div class="admin-panel-container">
    <a class="btn-admin" asp-action="StudentList">👨‍🎓 Pokaż listę studentów</a>
    <a class="btn-admin" href="@Url.Action("SecretariateZgloszenia", "Secretariate")">📥 Zgłoszenia od studentów</a>
</div>
